{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container">
    <a href="{{ path('app_home') }}" class="btn-back">‚Üê Retour</a>
    
    <div class="profile-header">
        <h1>üë§ Mon Profil</h1>
    </div>

    <div class="profile-card">
        <!-- Photo de profil et infos principales -->
        <div class="profile-picture-section">
            {% if user.profilePicture %}
                <img src="{{ asset('uploads/profiles/' ~ user.profilePicture) }}" alt="Photo de profil" class="profile-picture">
            {% else %}
                <div class="profile-picture placeholder">{{ (user.firstName|first ~ user.lastName|first)|upper }}</div>
            {% endif %}
        </div>

        <!-- Informations utilisateur -->
        <div class="profile-info">
            <div class="user-name">
                <h2>{{ user.firstName }} {{ user.lastName }}</h2>
                <p class="username">@{{ user.username }}</p>
            </div>

            <div class="info-section">
                <h3>Informations personnelles</h3>
                <div class="info-row">
                    <span class="label">Pr√©nom</span>
                    <span class="value">{{ user.firstName }}</span>
                </div>
                <div class="info-row">
                    <span class="label">Nom</span>
                    <span class="value">{{ user.lastName }}</span>
                </div>
                <div class="info-row">
                    <span class="label">Adresse e-mail</span>
                    <span class="value">{{ user.email }}</span>
                </div>
            </div>

            <div class="info-section">
                <h3>Permissions</h3>
                <div class="roles-container">
                    {% for role in user.roles %}
                        <span class="badge-role">{{ role }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="info-section">
                <h3>Historique du compte</h3>
                <div class="info-row">
                    <span class="label">Compte cr√©√© le</span>
                    <span class="value">{{ user.createdAt|date('d/m/Y √† H:i') }}</span>
                </div>
                {% if user.updatedAt %}
                    <div class="info-row">
                        <span class="label">Derni√®re mise √† jour</span>
                        <span class="value">{{ user.updatedAt|date('d/m/Y √† H:i') }}</span>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="profile-actions">
        <a href="{{ path('app_profile_edit') }}" class="btn btn-cyan">‚úèÔ∏è Modifier le profil</a>
        <a href="{{ path('app_home') }}" class="btn btn-secondary">‚Üê Retour √† l'accueil</a>
    </div>
</div>

<style>
    .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 30px 20px;
    }

    .btn-back {
        display: inline-block;
        color: #00d9ff;
        text-decoration: none;
        margin-bottom: 20px;
        font-size: 1em;
        transition: color 0.3s;
    }

    .btn-back:hover {
        color: #00f0ff;
        text-decoration: underline;
    }

    .profile-header {
        margin-bottom: 30px;
    }

    .profile-header h1 {
        font-size: 2.5em;
        color: #00d9ff;
        margin: 0 0 10px 0;
        text-shadow: 0 0 10px rgba(0, 217, 255, 0.3);
    }

    .profile-card {
        background: linear-gradient(135deg, rgba(10, 14, 39, 0.8) 0%, rgba(15, 25, 50, 0.9) 100%);
        border: 2px solid #00d9ff;
        border-radius: 12px;
        padding: 40px;
        display: grid;
        grid-template-columns: 200px 1fr;
        gap: 40px;
        margin-bottom: 30px;
        box-shadow: 0 0 30px rgba(0, 217, 255, 0.1), inset 0 0 20px rgba(0, 217, 255, 0.05);
    }

    .profile-picture-section {
        display: flex;
        justify-content: center;
        align-items: flex-start;
    }

    .profile-picture {
        width: 200px;
        height: 200px;
        border-radius: 12px;
        object-fit: cover;
        border: 3px solid #00d9ff;
        box-shadow: 0 0 20px rgba(0, 217, 255, 0.3);
    }

    .profile-picture.placeholder {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 200px;
        height: 200px;
        background: linear-gradient(135deg, #00d9ff 0%, #0099cc 100%);
        color: #0a0e27;
        font-size: 4em;
        font-weight: bold;
        border-radius: 12px;
        border: 3px solid #00d9ff;
        box-shadow: 0 0 20px rgba(0, 217, 255, 0.3);
    }

    .profile-info {
        display: flex;
        flex-direction: column;
        gap: 25px;
    }

    .user-name {
        padding-bottom: 15px;
        border-bottom: 2px solid #00d9ff;
    }

    .user-name h2 {
        font-size: 1.8em;
        color: #ffffff;
        margin: 0 0 5px 0;
    }

    .user-name .username {
        color: #00d9ff;
        font-size: 0.95em;
        margin: 0;
    }

    .info-section {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .info-section h3 {
        color: #00d9ff;
        font-size: 1.1em;
        margin: 0 0 10px 0;
        text-transform: uppercase;
        font-weight: 600;
        letter-spacing: 1px;
    }

    .info-row {
        display: grid;
        grid-template-columns: 150px 1fr;
        gap: 15px;
        padding: 8px 0;
        border-bottom: 1px solid rgba(0, 217, 255, 0.1);
    }

    .info-row:last-child {
        border-bottom: none;
    }

    .info-row .label {
        color: #00d9ff;
        font-weight: 600;
        font-size: 0.9em;
    }

    .info-row .value {
        color: #ffffff;
        font-size: 0.95em;
        word-break: break-word;
    }

    .roles-container {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }

    .badge-role {
        background: linear-gradient(135deg, #00d9ff 0%, #0099cc 100%);
        color: #0a0e27;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.85em;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 0 10px rgba(0, 217, 255, 0.2);
    }

    .profile-actions {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }

    .btn {
        display: inline-block;
        padding: 12px 24px;
        text-decoration: none;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        font-size: 0.95em;
        font-weight: 600;
        transition: all 0.3s;
        text-align: center;
    }

    .btn-cyan {
        background: linear-gradient(135deg, #00d9ff 0%, #0099cc 100%);
        color: #0a0e27;
        box-shadow: 0 0 15px rgba(0, 217, 255, 0.3);
    }

    .btn-cyan:hover {
        box-shadow: 0 0 25px rgba(0, 217, 255, 0.5);
        transform: translateY(-2px);
    }

    .btn-secondary {
        background: rgba(0, 217, 255, 0.1);
        color: #00d9ff;
        border: 2px solid #00d9ff;
    }

    .btn-secondary:hover {
        background: rgba(0, 217, 255, 0.2);
        box-shadow: 0 0 15px rgba(0, 217, 255, 0.2);
    }

    @media (max-width: 768px) {
        .profile-card {
            grid-template-columns: 1fr;
            gap: 30px;
            padding: 25px;
        }

        .profile-picture-section {
            width: 100%;
            justify-content: center;
        }

        .profile-picture,
        .profile-picture.placeholder {
            width: 150px;
            height: 150px;
        }

        .profile-picture.placeholder {
            font-size: 3em;
        }

        .profile-header h1 {
            font-size: 1.8em;
        }

        .user-name h2 {
            font-size: 1.4em;
        }

        .info-row {
            grid-template-columns: 1fr;
            gap: 5px;
        }

        .profile-actions {
            flex-direction: column;
        }

        .btn {
            width: 100%;
        }
    }
</style>
{% endblock %}
