{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container profile-container">
    <div class="profile-header">
        <h1>Mon Profil</h1>
    </div>

    <div class="profile-card">
        <div class="profile-picture-section">
            {% if user.profilePicture %}
                <img src="{{ asset('uploads/profiles/' ~ user.profilePicture) }}" alt="Photo de profil de {{ user.firstName }} {{ user.lastName }}" class="profile-picture">
            {% else %}
                <div class="profile-picture placeholder">
                    {{ (user.firstName|first ~ user.lastName|first)|upper }}
                </div>
            {% endif %}
        </div>

        <div class="profile-info">
            <div class="info-group">
                <label>Prénom</label>
                <p>{{ user.firstName }}</p>
            </div>

            <div class="info-group">
                <label>Nom</label>
                <p>{{ user.lastName }}</p>
            </div>

            <div class="info-group">
                <label>Nom d'utilisateur</label>
                <p>{{ user.username }}</p>
            </div>

            <div class="info-group">
                <label>Adresse e-mail</label>
                <p>{{ user.email }}</p>
            </div>

            <div class="info-group">
                <label>Rôles</label>
                <div class="roles">
                    {% for role in user.roles %}
                        <span class="badge badge-role">{{ role }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="info-group">
                <label>Compte créé le</label>
                <p>{{ user.createdAt|date('d/m/Y à H:i') }}</p>
            </div>

            {% if user.updatedAt %}
                <div class="info-group">
                    <label>Dernière mise à jour</label>
                    <p>{{ user.updatedAt|date('d/m/Y à H:i') }}</p>
                </div>
            {% endif %}
        </div>

        <div class="profile-actions">
            <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">✏️ Modifier le profil</a>
            <a href="{{ path('app_home') }}" class="btn btn-secondary">← Retour à l'accueil</a>
        </div>
    </div>
</div>

<style>
    .profile-container {
        max-width: 600px;
        margin: 40px auto;
        padding: 20px;
    }

    .profile-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .profile-header h1 {
        font-size: 2em;
        color: #333;
        margin: 0;
    }

    .profile-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        padding: 30px;
        display: grid;
        grid-template-columns: 150px 1fr;
        gap: 30px;
    }

    .profile-picture-section {
        grid-column: 1;
        grid-row: 1 / 3;
    }

    .profile-picture {
        width: 150px;
        height: 150px;
        border-radius: 8px;
        object-fit: cover;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .profile-picture.placeholder {
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        font-size: 3em;
        font-weight: bold;
        border-radius: 8px;
    }

    .profile-info {
        display: grid;
        gap: 15px;
    }

    .info-group {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid #eee;
    }

    .info-group:last-of-type {
        border-bottom: none;
    }

    .info-group label {
        font-weight: 600;
        color: #555;
        min-width: 120px;
    }

    .info-group p {
        margin: 0;
        color: #333;
    }

    .roles {
        display: flex;
        gap: 10px;
    }

    .badge-role {
        background-color: #007bff;
        color: white;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 0.85em;
        font-weight: 600;
    }

    .profile-actions {
        grid-column: 1 / -1;
        display: flex;
        gap: 10px;
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid #eee;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 4px;
        border: none;
        cursor: pointer;
        font-size: 0.95em;
        transition: opacity 0.3s;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn:hover {
        opacity: 0.85;
    }

    @media (max-width: 768px) {
        .profile-card {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .profile-picture-section {
            grid-column: 1;
            grid-row: auto;
            text-align: center;
        }

        .info-group {
            flex-direction: column;
            align-items: flex-start;
            gap: 5px;
        }

        .profile-actions {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            text-align: center;
        }
    }
</style>
{% endblock %}
