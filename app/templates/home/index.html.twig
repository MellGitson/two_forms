{% extends 'base.html.twig' %}

{% block title %}Accueil - Gestion de Catégories et Posts{% endblock %}

{% block body %}
<div class="container">
    <div class="hero">
        <h1>Bienvenue</h1>
        <p>Application de gestion de Catégories et Posts</p>
    </div>

    <div class="links">
        <div class="card">
            <h2>Catégories</h2>
            <p>Gérez vos catégories de posts</p>
            <a href="{{ path('app_category_index') }}" class="btn btn-primary">Voir les catégories</a>
            <a href="{{ path('app_category_new') }}" class="btn btn-secondary">Créer une catégorie</a>
        </div>

        <div class="card">
            <h2>Posts</h2>
            <p>Créez et gérez vos posts</p>
            <a href="{{ path('app_post_index') }}" class="btn btn-primary">Voir les posts</a>
            <a href="{{ path('app_post_new') }}" class="btn btn-secondary">Créer un post</a>
        </div>

        {% if is_granted('ROLE_ADMIN') %}
        <div class="card">
            <h2>Utilisateurs</h2>
            <p>Gérez les utilisateurs et leurs rôles</p>
            <a href="{{ path('app_user_index') }}" class="btn btn-primary">Voir les utilisateurs</a>
            <a href="{{ path('app_user_new') }}" class="btn btn-secondary">Créer un utilisateur</a>
        </div>

        <div class="card">
            <h2>Approbations</h2>
            <p>Approuvez les posts et commentaires</p>
            <a href="{{ path('app_admin_approvals') }}" class="btn btn-primary">Gérer les approbations</a>
        </div>
        {% endif %}
    </div>

    <div class="logout-section">
        <a href="{{ path('app_logout') }}" class="btn btn-logout">Déconnexion</a>
    </div>
</div>

<style>
    .container { max-width: 1200px; margin: 0 auto; padding: 20px; font-family: Arial, sans-serif; }
    .hero { text-align: center; padding: 40px 0; border-bottom: 2px solid #e0e0e0; }
    .hero h1 { font-size: 2.5em; margin: 0; color: #333; }
    .hero p { font-size: 1.2em; color: #666; margin-top: 10px; }
    
    .links { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 30px; margin: 40px 0; }
    .card { background: #f9f9f9; padding: 25px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); }
    .card h2 { margin-top: 0; color: #333; }
    .card p { color: #666; }
    
    .btn { display: inline-block; padding: 10px 20px; margin-right: 10px; margin-top: 10px; text-decoration: none; border-radius: 4px; border: none; cursor: pointer; font-size: 1em; }
    .btn-primary { background-color: #007bff; color: white; }
    .btn-secondary { background-color: #6c757d; color: white; }
    .btn:hover { opacity: 0.8; }
    
    .logout-section { text-align: center; margin-top: 40px; }
    .btn-logout { background-color: #dc3545; }
    .btn-logout:hover { opacity: 0.8; }
    
    @media (max-width: 768px) {
        .links { grid-template-columns: 1fr; }
        .hero h1 { font-size: 1.8em; }
    }
</style>
{% endblock %}
