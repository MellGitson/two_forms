{% extends 'base.html.twig' %}

{% block title %}MyBlog - Accueil{% endblock %}

{% block body %}
<div class="home-container">
    <!-- Hero Section -->
    <section class="hero">
        <h1>Bienvenue sur MyBlog</h1>
        <p class="hero-subtitle">Un espace de partage d'articles et de r√©flexions en communaut√©</p>
        
        {% if is_granted('ROLE_MODERATOR') %}
            <a href="{{ path('app_post_new') }}" class="btn btn-primary btn-large">√âcrire un article</a>
        {% elseif not is_granted('ROLE_USER') %}
            <a href="{{ path('app_login') }}" class="btn btn-primary btn-large">Se connecter</a>
        {% endif %}
    </section>

    <!-- Posts Grid -->
    <section class="posts-grid">
        <h2>Articles r√©cents</h2>
        
        {% if posts|length > 0 %}
            <div class="articles-container">
                {% for post in posts %}
                    <article class="article-card">
                        {% if post.imagePath %}
                            <div class="article-image">
                                <img src="{{ asset('uploads/posts/' ~ post.imagePath) }}" alt="{{ post.title }}" loading="lazy">
                            </div>
                        {% else %}
                            <div class="article-image placeholder">
                                üìù
                            </div>
                        {% endif %}

                        <div class="article-body">
                            <div class="article-meta">
                                <span class="category-badge">{{ post.category.name }}</span>
                                <span class="date">{{ post.createdAt|date('d M Y') }}</span>
                            </div>

                            <h3 class="article-title">{{ post.title }}</h3>

                            <p class="article-excerpt">
                                {% if post.content|length > 150 %}
                                    {{ post.content|slice(0, 150) }}...
                                {% else %}
                                    {{ post.content }}
                                {% endif %}
                            </p>

                            <div class="article-footer">
                                <span class="comment-count">{{ post.comments|length }} commentaire(s)</span>
                                <a href="{{ path('app_post_show', {'id': post.id}) }}" class="read-more">Lire l'article ‚Üí</a>
                            </div>
                        </div>
                    </article>
                {% endfor %}
            </div>
        {% else %}
            <div class="empty-state">
                <p>Aucun article publi√© pour le moment</p>
                <p style="margin-top: 0.5rem; color: var(--text-secondary);">Revenez plus tard pour d√©couvrir du nouveau contenu</p>
            </div>
        {% endif %}
    </section>
</div>

<style>
    .home-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    /* Hero Section */
    .hero {
        text-align: center;
        padding: 4rem 2rem;
        background: linear-gradient(135deg, rgba(0, 217, 255, 0.1) 0%, rgba(0, 217, 255, 0.05) 100%);
        border: 2px solid var(--border-color);
        border-radius: 12px;
        margin-bottom: 4rem;
        animation: fadeInUp 0.8s ease;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .hero h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, var(--neon-cyan) 0%, var(--neon-cyan-light) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-subtitle {
        font-size: 1.2rem;
        color: var(--text-secondary);
        margin-bottom: 2rem;
        max-width: 600px;
