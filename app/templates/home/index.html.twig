    }

    /* Posts Grid */
    .posts-grid {
        margin-bottom: 4rem;
    }

    .posts-grid h2 {
        margin-bottom: 2rem;
        text-align: center;
    }

    .articles-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
    }

    .article-card {
        background: rgba(26, 31, 58, 0.8);
        border: 1px solid var(--border-color);
        border-radius: 10px;
        overflow: hidden;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
    }

    .article-card:hover {
        border-color: var(--neon-cyan);
        box-shadow: 0 0 30px var(--neon-cyan-shadow);
        transform: translateY(-6px);
    }

    .article-image {
        width: 100%;
        height: 200px;
        background: linear-gradient(135deg, var(--secondary-dark), var(--tertiary-dark));
        overflow: hidden;
        position: relative;
    }

    .article-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .article-image.placeholder {
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
    }

    .article-body {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .article-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        font-size: 0.85rem;
    }

    .category-badge {
        background: linear-gradient(135deg, var(--neon-cyan) 0%, #00b8d4 100%);
        color: #000;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.8rem;
    }

    .date {
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    .article-title {
        color: var(--neon-cyan-light);
        margin-bottom: 0.8rem;
        line-height: 1.3;
    }

    .article-excerpt {
        color: var(--text-secondary);
        font-size: 0.95rem;
        margin-bottom: 1.5rem;
        flex-grow: 1;
    }

    .article-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1rem;
        border-top: 1px solid var(--border-color);
    }

    .comment-count {
        color: var(--text-secondary);
        font-size: 0.9rem;
    }

    .read-more {
        color: var(--neon-cyan);
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        position: relative;
    }

    .read-more::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--neon-cyan);
        transition: width 0.3s ease;
    }

    .read-more:hover::after {
        width: 100%;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: rgba(26, 31, 58, 0.5);
        border: 2px dashed var(--border-color);
        border-radius: 10px;
        color: var(--text-secondary);
    }

    /* Responsive */
    @media (max-width: 768px) {
        .hero {
            padding: 2rem 1rem;
        }

        .hero h1 {
            font-size: 2rem;
        }

        .articles-container {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .home-container {
            padding: 0 1rem;
        }
    }
</style>
{% endblock %}
