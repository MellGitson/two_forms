{% extends 'base.html.twig' %}

{% block title %}{{category.name}}{% endblock %}

{% block body %}
<div class="container">
    <h1>{{ category.name }}</h1>
    
    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning">Éditer</a>
    <a href="{{ path('app_category_index') }}" class="btn btn-secondary">Retour</a>
    
    <form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" style="display:inline;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr ?')">Supprimer</button>
    </form>
</div>

<style>
    .container { max-width: 800px; margin: 0 auto; padding: 20px; }
    .btn { padding: 8px 12px; text-decoration: none; border-radius: 4px; display: inline-block; margin-right: 5px; }
    .btn-warning { background-color: #ffc107; color: black; }
    .btn-secondary { background-color: #6c757d; color: white; }
    .btn-danger { background-color: #dc3545; color: white; border: none; cursor: pointer; }
    .btn:hover { opacity: 0.8; }
</style>
{% endblock %}
