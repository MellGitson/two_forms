{% extends 'base.html.twig' %}

{% block title %}Inscription - Blog{% endblock %}

{% block body %}
<div class="login-container">
    <div class="login-card">
        <h1>Créer un compte</h1>
        
        {% if app.flashes('error') %}
            <div class="alert alert-danger">
                {% for message in app.flashes('error') %}
                    <p>{{ message }}</p>
                {% endfor %}
            </div>
        {% endif %}

        {{ form_start(registrationForm, {
            'attr': {
                'class': 'form-login',
                'novalidate': 'novalidate'
            }
        }) }}

            <div class="form-group">
                {{ form_label(registrationForm.username) }}
                {{ form_widget(registrationForm.username, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Choisissez un nom d\'utilisateur'
                    }
                }) }}
                {% if registrationForm.username.vars.errors|length > 0 %}
                    <div class="form-error">
                        {{ form_errors(registrationForm.username) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'votre@email.com'
                    }
                }) }}
                {% if registrationForm.email.vars.errors|length > 0 %}
                    <div class="form-error">
                        {{ form_errors(registrationForm.email) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.firstName) }}
                {{ form_widget(registrationForm.firstName, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Votre prénom'
                    }
                }) }}
                {% if registrationForm.firstName.vars.errors|length > 0 %}
                    <div class="form-error">
                        {{ form_errors(registrationForm.firstName) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.lastName) }}
                {{ form_widget(registrationForm.lastName, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Votre nom'
                    }
                }) }}
                {% if registrationForm.lastName.vars.errors|length > 0 %}
                    <div class="form-error">
                        {{ form_errors(registrationForm.lastName) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.plainPassword) }}
                {{ form_widget(registrationForm.plainPassword, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Au moins 6 caractères'
                    }
                }) }}
                {% if registrationForm.plainPassword.vars.errors|length > 0 %}
                    <div class="form-error">
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group checkbox">
                {{ form_widget(registrationForm.agreeTerms, {
                    'attr': {
                        'class': 'form-checkbox'
                    }
                }) }}
                {{ form_label(registrationForm.agreeTerms) }}
                {% if registrationForm.agreeTerms.vars.errors|length > 0 %}
                    <div class="form-error">
                        {{ form_errors(registrationForm.agreeTerms) }}
                    </div>
                {% endif %}
            </div>

            <button type="submit" class="btn-submit">S'inscrire</button>

        {{ form_end(registrationForm) }}

        <div class="form-footer">
            <p>Vous avez déjà un compte? <a href="{{ path('app_login') }}">Connectez-vous ici</a></p>
        </div>
    </div>
</div>

<style>
    * { box-sizing: border-box; }

    body {
        background: #0a0e27;
        color: #e4e6eb;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 20px;
        min-height: 100vh;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        padding: 20px;
    }

    .login-card {
        background: linear-gradient(135deg, #1a1f3a 0%, #2d2e4a 100%);
        border: 2px solid #00d9ff;
        border-radius: 10px;
        padding: 40px;
        width: 100%;
        max-width: 450px;
        box-shadow: 0 0 20px rgba(0, 217, 255, 0.3);
    }

    .login-card h1 {
        text-align: center;
        color: #00d9ff;
        margin: 0 0 30px 0;
        font-size: 2em;
        text-shadow: 0 0 10px rgba(0, 217, 255, 0.5);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        margin-bottom: 8px;
        color: #00d9ff;
        font-weight: 600;
        font-size: 0.95em;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        background: #0a0e27;
        border: 2px solid #00d9ff;
        border-radius: 5px;
        color: #e4e6eb;
        font-size: 1em;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        outline: none;
        box-shadow: 0 0 15px rgba(0, 217, 255, 0.6);
        border-color: #00d9ff;
    }

    .form-control::placeholder {
        color: #666;
    }

    .form-error {
        color: #ff6b6b;
        font-size: 0.85em;
        margin-top: 5px;
        background: rgba(255, 107, 107, 0.1);
        padding: 8px;
        border-radius: 4px;
        border-left: 3px solid #ff6b6b;
    }

    .form-checkbox {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .form-checkbox input {
        margin-right: 10px;
        cursor: pointer;
        accent-color: #00d9ff;
    }

    .form-checkbox label {
        margin-bottom: 0;
        cursor: pointer;
        color: #e4e6eb;
    }

    .btn-submit {
        width: 100%;
        padding: 12px;
        background: linear-gradient(135deg, #00d9ff 0%, #1a7f9f 100%);
        color: #0a0e27;
        border: none;
        border-radius: 5px;
        font-size: 1em;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        text-shadow: 0 1px 2px rgba(255,255,255,0.2);
    }

    .btn-submit:hover {
        box-shadow: 0 0 20px rgba(0, 217, 255, 0.6);
        transform: translateY(-2px);
    }

    .btn-submit:active {
        transform: translateY(0);
    }

    .form-footer {
        text-align: center;
        margin-top: 20px;
        color: #666;
    }

    .form-footer a {
        color: #00d9ff;
        text-decoration: none;
        font-weight: 600;
    }

    .form-footer a:hover {
        text-decoration: underline;
    }

    .alert {
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 5px;
    }

    .alert-danger {
        background: rgba(255, 107, 107, 0.2);
        border: 2px solid #ff6b6b;
        color: #ff6b6b;
    }

    @media (max-width: 768px) {
        .login-card {
            border-radius: 5px;
            padding: 30px 20px;
        }

        .login-card h1 {
            font-size: 1.5em;
        }

        .login-container {
            min-height: 100vh;
        }
    }
</style>
{% endblock %}
