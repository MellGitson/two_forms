{% extends 'base.html.twig' %}

{% block title %}Éditer l'utilisateur - {{ user.username }}{% endblock %}

{% block body %}
<div class="container">
    <h1>Éditer {{ user.username }}</h1>
    
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">Sauvegarder</button>
        <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-secondary">Annuler</a>
    {{ form_end(form) }}
</div>

<style>
    .container { max-width: 600px; margin: 0 auto; padding: 20px; font-family: Arial, sans-serif; }
    h1 { color: #333; }
    .btn { display: inline-block; padding: 10px 20px; margin-right: 10px; margin-top: 20px; text-decoration: none; border-radius: 4px; border: none; cursor: pointer; }
    .btn-primary { background-color: #007bff; color: white; }
    .btn-secondary { background-color: #6c757d; color: white; }
    .btn:hover { opacity: 0.8; }
    form { background: #f9f9f9; padding: 20px; border-radius: 8px; }
    .form-group { margin-bottom: 15px; }
    label { display: block; margin-bottom: 5px; font-weight: bold; }
    input[type="text"], input[type="password"], select { width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; }
</style>
{% endblock %}
