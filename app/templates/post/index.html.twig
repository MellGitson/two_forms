{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
<div class="container">
    <h1>Posts</h1>
    
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_post_new') }}" class="btn btn-primary">Ajouter un post</a>
        <a href="{{ path('app_category_index') }}" class="btn btn-secondary">Gérer les catégories</a>
    {% endif %}
    
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Catégorie</th>
                <th>Date de création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.category.name }}</td>
                <td>{{ post.createdAt|date('d/m/Y H:i') }}</td>
                <td>
                    <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-sm btn-info">Voir</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-sm btn-warning">Éditer</a>
                        <form method="post" action="{{ path('app_post_delete', {'id': post.id}) }}" style="display:inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('êtes-vous sûr ?')">Supprimer</button>
                        </form>
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<style>
    .container { max-width: 1200px; margin: 0 auto; padding: 20px; }
    .btn { padding: 8px 12px; text-decoration: none; border-radius: 4px; display: inline-block; margin-right: 5px; }
    .btn-primary { background-color: #007bff; color: white; }
    .btn-secondary { background-color: #6c757d; color: white; }
    .btn-info { background-color: #17a2b8; color: white; font-size: 12px; }
    .btn-warning { background-color: #ffc107; color: black; font-size: 12px; }
    .btn-danger { background-color: #dc3545; color: white; font-size: 12px; border: none; cursor: pointer; }
    .btn-sm { padding: 5px 8px; }
    .btn:hover { opacity: 0.8; }
    .table { border-collapse: collapse; width: 100%; }
    .table th, .table td { border: 1px solid #ddd; padding: 12px; text-align: left; }
    .table th { background-color: #f2f2f2; }
    .mt-3 { margin-top: 20px; }
</style>
{% endblock %}
